%script{id: 'menu_template', type: 'text/html'}
  %ul.menu
    %li
      %a#past Past
    {{#concerts}}
    %li 
      %a{id: '{{server_id}}'} {{name}}
    {{/concerts}}
    %li.current
      %a#today Today
    %li
      %a#future Future

%script{id: 'concert_template', type: 'text/html'}
  %h1 {{name}}
  %p {{date}}
  #photos 
    %a Show Photos

%script{id: 'posts_template', type: 'text/html'}
  .gallery
    {{#posts}}
    %a
      %img{src: '{{image_url}}', width: 200, height: 200}
    {{/posts}}

%script{id: 'ptf_template', type: 'text/html'}
  %h1 {{title}}
  %input{type: 'text', id: 'artist_search', placeholder: 'Artist'}
  %input{type: 'text', id: 'city_search', value: 'Toronto'}
  #concerts

%script{id: 'concerts_template', type: 'text/html'}
  %table
    %thead
      %tr
        %td
        %td Venue
        %td Start Time
        %td 
    %tbody
      {{#concerts}}
      %tr
        %td {{name}}
        %td {{venue_name}}
        %td {{start_time}}
        %td
          %button{id: '{{songkick_id}}'} Add to Profile
      {{/concerts}}

#container{'data-userid' => @user_id}
  #menu
  #content