#!/bin/bash

if [ "$RAILS_ENV" == "production" ]; then
  if [ "$1" == "custom_web" ]; then
    # PRODUCTION
    ./bin/unicorn_rails -c config/unicorn.rb -E $RAILS_ENV -D
  fi
elif [ "$RAILS_ENV" == "staging" ]; then
  if [ "$1" == "web" ]; then
    # STAGING
    ./bin/unicorn -p $PORT -c ./config/unicorn.rb
  fi
else
  if [ "$1" == "web" ]; then
    # DEVELOPMENT
    ./bin/unicorn -c config/unicorn.rb -E "development"
  fi
fi

# Do nothing
tail -f /dev/null